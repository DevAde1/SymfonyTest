{% extends "base.html.twig" %}

{% block title %}Gestion Categorie{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Gestion Catégories</h1>

    <a href="{{ path('admin_categorie_new') }}" class="btn btn-primary my-2"> New catégories</a>

    <div class="container">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.title }}</td>
                        <td>{{ categorie.description }}</td>
                        <td>
                            <a href="#" class="text-warning">edit</a>
                            <a href="#" class="text-danger">delete</a>
                        </td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        
        </table>
    
    
    </div>
{% endblock %}